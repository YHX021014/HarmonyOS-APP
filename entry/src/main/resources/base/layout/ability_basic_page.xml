<?xml version="1.0" encoding="utf-8"?>
<StackLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="bottom"
    ohos:orientation="vertical">

    <PageSlider
        ohos:id="$+id:page_slider"
        ohos:height="match_parent"
        ohos:width="match_parent">
    </PageSlider>

    <TabList
        ohos:id="$+id:tab_list"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:background_element="#FFFFFFFF"
        ohos:normal_text_color="#000000"
        ohos:selected_text_color="#FFFF7FD9"
        ohos:selected_tab_indicator_color="#FFFF7FD9"
        ohos:selected_tab_indicator_height="2vp"
        ohos:tab_indicator_type="bottom_line"
        ohos:layout_alignment="bottom"
        ohos:text_size="16fp"
        ohos:fixed_mode="true"/>

</StackLayout>

