<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="130vp"
    ohos:width="match_parent"
    ohos:padding="5vp"
    ohos:margin="5vp"
    ohos:background_element="$graphic:inpage_button_element_selector">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent">
        <Text
            ohos:id="$+id:home_page_Username_id"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_margin="8vp"
            ohos:max_text_lines="2"
            ohos:multiple_lines="true"
            ohos:right_margin="8vp"
            ohos:text="  用户名"
            ohos:text_color="#2E2E2E"
            ohos:text_size="22fp"
            />

        <Text
            ohos:id="$+id:home_page_post_forum_id"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="8vp"
            ohos:text="  吧名"
            ohos:top_margin="8vp"
            ohos:text_color="#FF000000"
            ohos:text_size="18fp"/>
        <Text
            ohos:id="$+id:home_page_post_title_id"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="8vp"
            ohos:text="  标题"
            ohos:top_margin="10vp"
            ohos:multiple_lines="true"
            ohos:max_text_lines="2"
            ohos:right_margin="156vp"
            ohos:text_color="#FF000000"
            ohos:text_size="20fp"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent">
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_content">
            <Image
                ohos:id="$+id:like_image_id"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="290vp"
                ohos:scale_x="0.4"
                ohos:scale_y="0.4"
                ohos:image_src="$media:praise">
            </Image>
            <Text
                ohos:id="$+id:like_count_id"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="345vp"
                ohos:text_size="20vp"
                ohos:top_margin="14vp"
                ohos:text="320">
            </Text>
        </DependentLayout>

        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_content">
            <Image
                ohos:id="$+id:collect_image_id"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="290vp"
                ohos:top_margin="1vp"
                ohos:scale_x="0.4"
                ohos:scale_y="0.4"
                ohos:image_src="$media:collect">
            </Image>
            <Text
                ohos:id="$+id:collect_count_id"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="345vp"
                ohos:text_size="20vp"
                ohos:top_margin="14vp"
                ohos:text="105">
            </Text>
        </DependentLayout>


    </DirectionalLayout>


</DependentLayout>