<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:bk35"
    ohos:padding="40vp">

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_content">
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="40vp"
            ohos:top_margin="10vp"
            ohos:image_src="$media:title">
        </Image>

    </DependentLayout>

    <Image
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:left_margin="60vp"
        ohos:top_margin="10vp"
        ohos:image_src="$media:message_button">
    </Image>

    <Button
        ohos:id="$+id:message_page_myFollow_button_id"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="我的关注"
        ohos:background_element="$graphic:inpage_button_element_selector"
        ohos:top_margin="45vp"
        ohos:text_size="25vp">

    </Button>

    <Button
        ohos:id="$+id:message_page_myFans_button_id"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="我的粉丝"
        ohos:background_element="$graphic:inpage_button_element_selector"
        ohos:top_margin="45vp"
        ohos:text_size="25vp">

    </Button>

    <Button
        ohos:id="$+id:message_page_searchUser_button_id"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="查找用户"
        ohos:background_element="$graphic:inpage_button_element_selector"
        ohos:top_margin="45vp"
        ohos:text_size="25vp">

    </Button>

</DirectionalLayout>