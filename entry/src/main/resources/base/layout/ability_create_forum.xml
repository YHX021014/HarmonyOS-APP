<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:bk35"
    ohos:padding="40vp">
    <!--    ohos:orientation="vertical"-->
    <!--    ohos:alignment="center"-->

    <Image
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:left_margin="40vp"
        ohos:top_margin="10vp"
        ohos:image_src="$media:title">
    </Image>


    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent">
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="75vp"
            ohos:top_margin="10vp"
            ohos:image_src="$media:wodechuangjian">
        </Image>

        <Button
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="10vp"
            ohos:element_right="$media:back">
        </Button>
    </DependentLayout>

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="贴吧名:"
        ohos:text_size="25fp"
        ohos:text_color="#FF000000"
        ohos:top_margin="30fp">

    </Text>

    <TextField
        ohos:id="$+id:createForum_page_textfield_forumName_id"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="请输入贴吧名称"
        ohos:text_size="20fp"
        ohos:text_color="#FFBABABA"
        ohos:background_element="$graphic:home_search_element"
        ohos:text_alignment="center"
        ohos:top_margin="10vp">
    </TextField>

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="贴吧简介:"
        ohos:text_size="25fp"
        ohos:text_color="#FF000000"
        ohos:top_margin="20fp">

    </Text>

    <TextField
        ohos:id="$+id:createForum_page_textfield_forumIntroduction_id"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="请输入贴吧简介"
        ohos:text_size="20fp"
        ohos:text_color="#FFBABABA"
        ohos:background_element="$graphic:home_search_element"
        ohos:text_alignment="center"
        ohos:top_margin="10vp">
    </TextField>

    <Button
        ohos:id="$+id:create_forum_page_create_button_id"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="创  建"
        ohos:background_element="$graphic:inpage_button_element_selector"
        ohos:top_margin="45vp"
        ohos:text_size="25vp">

    </Button>


</DirectionalLayout>