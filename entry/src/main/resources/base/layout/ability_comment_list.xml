<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:padding="10vp"
    ohos:margin="10vp"
    ohos:background_element="$graphic:inpage_button_element_empty">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent">
        <Text
            ohos:id="$+id:comment_list_userName_id"
            ohos:height="match_content"
            ohos:top_margin="5vp"
            ohos:width="match_parent"
            ohos:left_margin="12vp"
            ohos:max_text_lines="3"
            ohos:multiple_lines="true"
            ohos:right_margin="8vp"
            ohos:text="用户名"
            ohos:text_color="#2E2E2E"
            ohos:text_size="24fp"
            />

        <Text
            ohos:id="$+id:comment_list_comment_id"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:padding="5vp"
            ohos:left_margin="8vp"
            ohos:max_text_lines="5"
            ohos:multiple_lines="true"
            ohos:text="我的评论"
            ohos:top_margin="20vp"
            ohos:text_color="#FF000000"
            ohos:text_size="18fp"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent">
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_content">
            <Image
                ohos:id="$+id:comment_likes_button_id"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="250vp"
                ohos:scale_x="0.4"
                ohos:scale_y="0.4"
                ohos:image_src="$media:praise1">
            </Image>
            <Text
                ohos:id="$+id:comment_list_like_id"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="305vp"
                ohos:text_size="20vp"
                ohos:top_margin="10vp"
                ohos:text="320">
            </Text>
        </DependentLayout>


    </DirectionalLayout>


</DependentLayout>